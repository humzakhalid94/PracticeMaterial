<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.gms.example.practicematerial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/PracticeMaterial">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TransitionActivity1"
            android:theme="@style/PracticeMaterial.Red" />

        <activity
            android:name=".TransitionActivity2"
            android:theme="@style/PracticeMaterial.Red" />
        <activity
            android:name=".TransitionActivity3"
            android:theme="@style/PracticeMaterial.Red" />
        <activity
            android:name=".SharedElementActivity"
            android:theme="@style/PracticeMaterial.Blue" />

        <activity
            android:name=".AnimationsActivity1"
            android:theme="@style/PracticeMaterial.Green" />

        <activity
            android:name=".AnimationsActivity2"
            android:theme="@style/PracticeMaterial.Green" />

        <activity
            android:name=".RevealActivity"
            android:theme="@style/PracticeMaterial.Yellow" />
    </application>

</manifest>
